package com.challenge.keeggo.service;

import java.util.List;
import java.util.Optional;

import com.challenge.keeggo.dto.CustomerLoginDTO;
import com.challenge.keeggo.dto.CustomerRequestDTO;
import com.challenge.keeggo.entity.Customer;

public interface CustomerService {

	CustomerRequestDTO customerSignup (CustomerRequestDTO customerRequestDTO);
	CustomerLoginDTO customerLogin (CustomerLoginDTO customerLoginDTO);
	
	Optional<CustomerRequestDTO> customerUpdate(CustomerRequestDTO customerRequestDTO);
